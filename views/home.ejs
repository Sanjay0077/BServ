  <title>BServ</title>
  <link rel="stylesheet" href="/style.css">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


</head>

<body>
  <!-- NavBar Start-->
  <nav class="navbar">

    <div class="navbar-collapse ">
      <ul class="nav navbar-nav navbar-left">
        <li><h6 style="color:orangered;font-size: 29px;text-shadow:black;">BServ</h6></li>
      </ul>
      <ul class="nav navbar-nav navbar-center" id="link">
        <li><a><b>{{ user.email}}ðŸ‘¦</b></a></li>
        
    </ul>
     
        
      <ul class="nav navbar-nav navbar-right">
        <!-- <li> <div class="border"><div class="signup"><a href="/userview">View my Registrations&nbsp;</a></div></div></li> -->

         <li> <div class="border"><div class="signup"><a href="/logout">Signout&nbsp;<i class="fa fa-sign-out"></i></a></div></div></li>
        </ul>

    </div>
  </nav>
  <!-- NavBar End-->
  <!-- form section -->
  {{# if msg}}
  <div class="alert"><b>{{msg}}</b></div>
  {{/if}}
  <center>
    <div class="form-1">
      <div class="in-form-1">
        <h1 style="color:red;font-size: 30px;"><b>Welcome!</b></h1>

        <h2><u>Registration Details</u></h2>
        <br>
        
        <form action="/home" method="post" autocomplete="false">
          <div class="form-group">
            <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" required>
          </div>
          <br>

          <div class="form-group">

            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
          </div>
          <br>
          <div class="form-group">

            <input type="text" class="form-control" id="phone" placeholder="Enter Contact no" name="phone" required>
          </div>
          <br>
          <div class="form-check">
            <label>
              <h4><b>Gender</b></h4>
            </label><br>
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="gender" value="male">&nbsp;&nbsp;Male
            </label>&nbsp;&nbsp;
            <label class="form-check-label">
              <input type="radio" class="form-check-input" name="gender" value="Female">&nbsp;&nbsp;Female
            </label>
          </div>
          <br>
          <div class="form-group">

            <input type="text" class="form-control" id="vm" placeholder="Vehicle Model" name="vm" required>
          </div>
          <br>

          <div class="form-group">

            <input type="text" class="form-control" id="vn" placeholder="Vehicle no" name="vn" required>
          </div>
          <br>
          <div class="form-group">

            <input type="text" class="form-control" id="ln" placeholder="License no" name="ln">
          </div>
          <br>
          <div class="form-check">
            <h2>Select Service</h2>
            <input class="form-check-input" type="checkbox" id="check1" name="service" value="General Checkup" checked>
            <label class="form-check-label">General Checkup</label>&nbsp;&nbsp;
            <input class="form-check-input" type="checkbox" id="check1" name="service" value="Oil Change">
            <label class="form-check-label">Oil Change</label>&nbsp;&nbsp;
            <input class="form-check-input" type="checkbox" id="check1" name="service" value="Water Wash">
            <label class="form-check-label">Water Wash</label>
          </div>
          <br>
          <!-- <div class="form-group">
            <label>Current Date</label>
            <input type="date" class="form-control" id="date" name="date" required>
          </div>
          <br> -->
          <div class="form-group">
            <label for="status">Status</label>
            <select class="form-control" id="status" name="status">
              <option selected>Pending</option>
              

            </select>
          </div>
          <br>
          <button type="Submit" class="btn">Book Now!</button>

          <button type="reset" class="btn btn-primary">Reset</button>


        </form>
      </div>
    </div>
  </center>
  <!-- end form section -->
</body>

</html>